{
  "name": "forgirls-electron-app",
  "version": "1.0.0",
  "author": "User",
  "description": "Desktop app wrapper for static HTML/CSS UI",
  "main": "main.js",
  "scripts": {
    "start": "set ELECTRON_RUN_AS_NODE=&& electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.example.forgirls",
    "win": {
      "target": "portable",
      "signAndEditExecutable": false
    },
    "directories": {
      "output": "dist"
    }
  },
  "devDependencies": {
    "electron": "^37.2.0",
    "electron-builder": "^25.1.8"
  }
}
